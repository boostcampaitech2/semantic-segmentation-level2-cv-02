{
    "name": "Segmentation",
    "n_gpu": 1,
    "arch": {"type": "BasicModel", "args": {"num_classes": 11}},
    "kfold": {
        "flag": true,
        "cnt": 5,
        "train_fold": "../input/data/train_fold.json", 
        "valid_fold": "../input/data/val_fold.json"        
    },
    "data_loader": {
        "type": "BasicDataLoader",
        "args": {
            "dataset": {
                "type": "BasicDataset",
                "args": {
                    "data_dir": "../input/data",
                    "ann_file": "../input/data/train_fold1.json",
                    "mode": "train",
                    "transform": {"type": "BasicTransform", "args": {}}
                }
            },
            "batch_size": 16,
            "shuffle": true,
            "num_workers": 6
        }
    },
    "valid_data_loader": {
        "type": "BasicDataLoader",
        "args": {
            "dataset": {
                "type": "BasicDataset",
                "args": {
                    "data_dir": "../input/data",
                    "ann_file": "../input/data/val.json",
                    "mode": "val",
                    "transform": {"type": "BasicTransform", "args": {}}
                }
            },
            "batch_size": 16,
            "shuffle": false,
            "num_workers": 6
        }
    },
    "test_data_loader": {
        "type": "BasicDataLoader",
        "args": {
            "dataset": {
                "type": "BasicDataset",
                "args": {
                    "data_dir": "../input/data",
                    "ann_file": "../input/data/test.json",
                    "mode": "test",
                    "transform": {"type": "BasicTransform", "args": {}}
                }
            },
            "batch_size": 16,
            "shuffle": false,
            "num_workers": 6
        }
    },
    "optimizer": {"type": "Adam", "args": {"lr": 0.001, "weight_decay": 0, "amsgrad": true}},
    "loss": "CrossEntropyLoss",
    "metrics": [],
    "lr_scheduler": {"type": "CosineAnnealingLR", "args": {"T_max": 10, "eta_min": 0.001}},
    "trainer": {
        "epochs": 1,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max valid/mIoU",
        "early_stop": 10,
        "tensorboard": false
    },
    "wandb": {
        "env_path": "./.env",
        "entity": "boostcamp-2th-cv-02team",
        "project": "semantic-segmentation-recycling-trash",
        "unique_tag": ""
    }
}
